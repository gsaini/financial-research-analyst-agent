# ============================================
# Financial Research Analyst Agent - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------
# LLM Configuration
# -----------------------------------------
# Choose your LLM provider: openai, anthropic, ollama, lmstudio, vllm, groq
LLM_PROVIDER=ollama

# --- Commercial APIs (optional) ---
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# --- Open Source / Local LLM Options ---
# Ollama (https://ollama.ai) - Run models locally for FREE
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama4:latest
# Popular Ollama models: llama4, llama3.2, mistral, mixtral, codellama, phi3, qwen2.5

# LM Studio (https://lmstudio.ai) - Local LLM with OpenAI-compatible API
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=local-model

# vLLM (https://github.com/vllm-project/vllm) - High-performance inference
VLLM_BASE_URL=http://localhost:8000/v1
VLLM_MODEL=meta-llama/Llama-3.2-8B-Instruct

# Groq (https://groq.com) - Fast inference, free tier available
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.2-70b-versatile

# --- LLM Settings ---
LLM_MODEL=llama4:latest
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# -----------------------------------------
# Financial Data APIs
# -----------------------------------------
# --- Open Source / Free Options ---
# Yahoo Finance via yfinance (FREE, no API key needed)
USE_YFINANCE=true

# --- Commercial APIs (optional, for additional data) ---
# Alpha Vantage (https://www.alphavantage.co/support/#api-key) - Free tier: 25 req/day
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Finnhub (https://finnhub.io/) - Free tier: 60 calls/min
FINNHUB_API_KEY=your_finnhub_api_key

# News API (https://newsapi.org/) - Free tier: 100 req/day
NEWS_API_KEY=your_news_api_key

# --- Alternative Free News Sources ---
# GNews (https://gnews.io/) - Free tier: 100 req/day
GNEWS_API_KEY=your_gnews_api_key

# MediaStack (https://mediastack.com/) - Free tier: 500 req/month
MEDIASTACK_API_KEY=your_mediastack_api_key

# -----------------------------------------
# Database Configuration
# -----------------------------------------
# SQLite (default for development)
DATABASE_URL=sqlite:///./data/financial_agent.db

# PostgreSQL (for production/Docker)
# DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/financial_agent
POSTGRES_PASSWORD=your_secure_postgres_password

# -----------------------------------------
# Redis Configuration (for caching)
# -----------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# -----------------------------------------
# Vector Store Configuration
# -----------------------------------------
# ChromaDB (Open Source, local) - DEFAULT
VECTOR_STORE_PROVIDER=chroma
CHROMA_PERSIST_DIR=./data/chroma

# Qdrant (Open Source) - Can run locally or cloud
# VECTOR_STORE_PROVIDER=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=financial_research

# Milvus (Open Source) - High-performance vector DB
# VECTOR_STORE_PROVIDER=milvus
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Weaviate (Open Source) - Knowledge graph + vector search
# VECTOR_STORE_PROVIDER=weaviate
WEAVIATE_URL=http://localhost:8080

# -----------------------------------------
# Embedding Models Configuration
# -----------------------------------------
# Choose: openai, huggingface, ollama, sentence-transformers
EMBEDDING_PROVIDER=sentence-transformers

# --- Open Source Embedding Options (FREE, runs locally) ---
# Sentence Transformers (https://www.sbert.net/)
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
# Alternatives: all-mpnet-base-v2, multi-qa-mpnet-base-dot-v1, paraphrase-multilingual-MiniLM-L12-v2

# HuggingFace Embeddings (runs locally)
HF_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
# Alternatives: BAAI/bge-base-en-v1.5, intfloat/e5-small-v2, thenlper/gte-small

# Ollama Embeddings (requires Ollama running)
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
# Alternatives: mxbai-embed-large, all-minilm

# --- Commercial Embedding (optional) ---
EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------
# Application Settings
# -----------------------------------------
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# -----------------------------------------
# Agent Configuration
# -----------------------------------------
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300
ENABLE_MEMORY=true

# -----------------------------------------
# Rate Limiting
# -----------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------
# Security
# -----------------------------------------
SECRET_KEY=your_secret_key_for_jwt_tokens
API_KEY_HEADER=X-API-Key
