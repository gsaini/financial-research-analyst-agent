# ============================================
# Financial Research Analyst Agent - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------
# LLM Configuration
# -----------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# -----------------------------------------
# Financial Data APIs
# -----------------------------------------
# Alpha Vantage (https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Finnhub (https://finnhub.io/)
FINNHUB_API_KEY=your_finnhub_api_key

# News API (https://newsapi.org/)
NEWS_API_KEY=your_news_api_key

# -----------------------------------------
# Database Configuration
# -----------------------------------------
# SQLite (default for development)
DATABASE_URL=sqlite:///./data/financial_agent.db

# PostgreSQL (for production/Docker)
# DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/financial_agent
POSTGRES_PASSWORD=your_secure_postgres_password

# -----------------------------------------
# Redis Configuration (for caching)
# -----------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# -----------------------------------------
# Vector Store Configuration
# -----------------------------------------
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------
# Application Settings
# -----------------------------------------
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# -----------------------------------------
# Agent Configuration
# -----------------------------------------
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300
ENABLE_MEMORY=true

# -----------------------------------------
# Rate Limiting
# -----------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# -----------------------------------------
# Security
# -----------------------------------------
SECRET_KEY=your_secret_key_for_jwt_tokens
API_KEY_HEADER=X-API-Key
